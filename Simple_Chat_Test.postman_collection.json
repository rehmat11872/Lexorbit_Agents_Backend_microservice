{
	"info": {
		"name": "Simple Chat Test",
		"description": "3-step chat system test - no auth required",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api"
		},
		{
			"key": "conv_id",
			"value": ""
		}
	],
	"item": [
		{
			"name": "1. Create Conversation",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Legal AI Chat\"\n}"
				},
				"url": "{{base_url}}/conversations/"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    pm.collectionVariables.set('conv_id', pm.response.json().conversation_id);",
							"    console.log('Conversation created:', pm.response.json().conversation_id);",
							"}"
						]
					}
				}
			]
		},
		{
			"name": "2. Send Message",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"message\": \"What is contract law?\"\n}"
				},
				"url": "{{base_url}}/conversations/{{conv_id}}/chat/"
			}
		},
		{
			"name": "3. Get History",
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/conversations/{{conv_id}}/"
			}
		},
		{
			"name": "Extra: Legal Question",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"message\": \"What's the difference between civil and criminal law?\"\n}"
				},
				"url": "{{base_url}}/conversations/{{conv_id}}/chat/"
			}
		}
	]
}